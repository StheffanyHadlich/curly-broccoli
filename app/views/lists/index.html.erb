<h1><%= 'My lists' %></h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
              <th scope="col"><%= t('list.name') %></th>
              <th scope="col"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
          <td><%= list.name %></td>
          <td>
            <div class="btn-group btn-group-sm" role="group">
              <%= link_to t('show'), list_products_path(list), class: 'btn btn-info', role: :button %>
              <%= link_to t('edit'), edit_list_path(list), class: 'btn btn-success', role: :button %>
              <%= link_to t('destroy'), list_path(list), method: :delete, remote: true, class: 'btn btn-danger', role: :button %>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New list', new_list_path, class: 'btn btn-primary', role: :button %>

