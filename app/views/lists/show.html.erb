<h1><%= t('listing', name: t('list.title', count: 1)) %></h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row"><%= t('list.name') %>:</th>
   <td><%= @list.name %></td>
 </tr>

</table>

<%= link_to 'Products', list_products_path(@list), class: 'btn btn-primary', role: :button %>

<%= link_to 'Edit', edit_list_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to 'Back', lists_path, class: 'btn btn-outline-secondary', role: :button %>
