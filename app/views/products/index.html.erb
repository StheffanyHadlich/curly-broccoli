<h1><%= List.find(params[:list_id]).name %></h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">Products</th>
      <th scope="col">Status</th>
      <th scope="col"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.bought %></td>
        <td>
          <div class="btn-group btn-group-sm" role="group">
            <%= link_to t('show'), list_product_path(product.list_id, product.id), class: 'btn btn-info', role: :button %>
            <%= link_to t('edit'), edit_list_product_path(product.list_id, product.id), class: 'btn btn-success', role: :button %>
            <%= link_to t('destroy'), list_product_path(@list.id, product), method: :delete, remote: true, class: 'btn btn-danger', role: :button %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', lists_path(params[:list_id]), class: 'btn btn-outline-secondary', role: :button %>

<%= link_to 'New product', new_list_product_path, class: 'btn btn-primary', role: :button %>

