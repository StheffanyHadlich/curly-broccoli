<h1><%= 'Product' %></h1>

<table class="table table-striped table-hover">
   <th scope="row"><%= 'Name' %>:
      <td><%= @product.name %></td>
   </th>
   <th scope="row"><%= 'Bought' %>:</th>
      <td><%= @product.bought %></td>
</table>

<%= link_to 'Back', list_products_path, class: 'btn btn-outline-secondary', role: :button %>
<%= link_to 'Edit', edit_list_product_path(@list, @product), class: 'btn btn-primary', role: :button %>
